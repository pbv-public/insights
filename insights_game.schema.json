{
  "$id": "/insights/game",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Various insights about the game.",
  "properties": {
    "game_stats": {
      "$ref": "/insights/game_stats",
      "description": "Contains statistics about the game as a whole.",
      "title": "Game Stats"
    },
    "player_stats": {
      "description": "each player's stats",
      "items": {
        "$ref": "/insights/player_stats",
        "description": "Contains player-specific stats over the whole game.",
        "title": "Player Stats"
      },
      "maxItems": 4,
      "minItems": 4,
      "type": "array"
    },
    "rally_start_times": {
      "description": "the time in the video each rally in this game started",
      "items": {
        "$ref": "/types/video_time",
        "description": "when this rally started",
        "title": "Video Milliseconds"
      },
      "title": "Rally Start Times",
      "type": "array"
    },
    "version": {
      "const": "0.0.2"
    }
  },
  "required": [
    "version",
    "game_stats",
    "player_stats",
    "rally_start_times"
  ],
  "title": "Game Insights",
  "type": "object"
}